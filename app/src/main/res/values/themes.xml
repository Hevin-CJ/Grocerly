    <resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
        <!-- Base application theme. -->
        <style name="Base.Theme.Grocerly" parent="Theme.Material3.DayNight.NoActionBar">

            <item name="colorPrimary">@color/green</item>
            <item name="colorPrimaryContainer">@color/green</item>

            <item name="android:fitsSystemWindows">true</item>
            <item name="android:textColor">@color/black</item>
            <item name="fontFamily">@font/custom_font</item>
            <item name="textFillColor">@color/black</item>

            <item name="android:titleTextColor">@color/black</item>
            <item name="hintTextColor">@color/grey</item>

            <item name="android:windowLightStatusBar">true</item>

        </style>


        <style name="RoundedBottomButton" parent="Widget.MaterialComponents.Button">
            <item name="backgroundTint">@color/hint_grey</item>
            <item name="cornerFamily">rounded</item>
            <item name="cornerSizeTopLeft">0dp</item>
            <item name="cornerSizeTopRight">0dp</item>
            <item name="cornerSizeBottomLeft">14dp</item>
            <item name="cornerSizeBottomRight">14dp</item>
        </style>




        <style name="CustomTabText" parent="TextAppearance.Design.Tab">
            <item name="android:textSize">10sp</item>
            <item name="fontFamily">@font/baloo_da_2_semibold</item>
        </style>

        <style name="CustomPopupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
            <item name="android:popupBackground">@drawable/popup_menu_background</item>
        </style>

        <style name="TopCornersCardShape" parent="">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSizeTopLeft">8dp</item>
            <item name="cornerSizeTopRight">8dp</item>
            <item name="cornerSizeBottomLeft">0dp</item>
            <item name="cornerSizeBottomRight">0dp</item>
        </style>

        <style name="BottomCornersCardShape" parent="">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSizeTopLeft">0dp</item>
            <item name="cornerSizeTopRight">0dp</item>
            <item name="cornerSizeBottomLeft">8dp</item>
            <item name="cornerSizeBottomRight">8dp</item>
        </style>


        <style name="Theme.Grocerly" parent="Base.Theme.Grocerly" />
    </resources>