
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:backgroundTint="@color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/shimmerColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imgviewcartitem"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:contentDescription="Image"
                android:scaleType="fitXY"
                android:background="@color/shimmerColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtviewproductname"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/shimmerColor"
                android:fontFamily="@font/custom_font"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="20sp"
                android:maxLength="15"
                app:layout_constraintStart_toEndOf="@+id/imgviewcartitem"
                app:layout_constraintTop_toTopOf="@+id/imgviewcartitem"
                />

            <TextView
                android:id="@+id/txtviewPrice"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/custom_font"
                android:maxLength="15"
                android:background="@color/shimmerColor"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/txtviewproductname"
                app:layout_constraintTop_toBottomOf="@+id/txtviewproductname" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:backgroundTint="@color/shimmerColor"
                android:background="@drawable/cartproduct_background"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:background="@color/shimmerColor"
                    />

                <TextView
                    android:id="@+id/txtviewquantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@color/shimmerColor"
                    android:fontFamily="@font/custom_font"
                    android:textFontWeight="600"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/txviewupdatequantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:visibility="invisible"
                    android:background="@color/shimmerColor"
                    android:src="@drawable/baseline_add_24" />

            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
