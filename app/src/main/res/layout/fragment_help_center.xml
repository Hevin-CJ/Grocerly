<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HelpCenter">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarhelpcenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcviewchat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@+id/txtinputlayoutchat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarhelpcenter" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtinputlayoutchat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:helperTextEnabled="true"
        app:helperTextTextColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sendbtn"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edttxtchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Text here"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="3"
            android:scrollbars="vertical"
            app:hintTextColor="@color/green" />


    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imgiviewgrocerly"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/grocerly"
        app:layout_constraintBottom_toTopOf="@+id/txtinputlayoutchat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarhelpcenter"
        app:layout_constraintVertical_bias="0.40" />

    <ImageButton
        android:id="@+id/sendbtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/green"
        android:contentDescription="Send Button"
        android:src="@drawable/outline_send_24"
        app:layout_constraintBottom_toBottomOf="@+id/txtinputlayoutchat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtinputlayoutchat"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/txtviewlivetext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgiviewgrocerly"
        tools:text="Hello,I am grocerly AI assistant" />
</androidx.constraintlayout.widget.ConstraintLayout>